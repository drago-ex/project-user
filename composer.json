{
	"name": "drago-ex/project-user",
	"type": "drago-project-resource",
	"description": "A small helper package for working with the authenticated user in Drago project.",
	"license": ["MIT"],
	"require": {
		"php": ">=8.3 <9",
		"nette/security": "^3.2",
		"nette/application": "^3.2"
	},
	"extra": {
		"drago-project": {
			"install": {
				"copy": {
					"resources/User": "app/Core/User"
				}
			}
		}
	},
	"require-dev": {
		"phpstan/phpstan-nette": "^1.2.9"
	},
	"scripts": {
		"phpstan": "phpstan analyse --level 5 --configuration phpstan.neon resources/User"
	}
}
